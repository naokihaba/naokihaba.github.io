---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const talks = (await getCollection('talks')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={`登壇 - ${SITE_TITLE}`} description="登壇情報" />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>登壇</h1>
				<ul>
					{
						talks.map((talk) => (
							<li>
								<a href={`/talks/${talk.id}/`}>
									<h4 class="title">{talk.data.title}</h4>
									<p class="date">
										<FormattedDate date={talk.data.date} />
										{' - '}
										{talk.data.event}
									</p>
								</a>
								<div class="links">
									{talk.data.slideUrl && (
										<a href={talk.data.slideUrl} target="_blank" rel="noopener noreferrer">
											スライド
										</a>
									)}
									{talk.data.videoUrl && (
										<a href={talk.data.videoUrl} target="_blank" rel="noopener noreferrer">
											動画
										</a>
									)}
								</div>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 960px;
	}
	ul {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		list-style-type: none;
		margin: 0;
		padding: 0;
	}
	ul li {
		width: calc(50% - 1rem);
	}
	ul li * {
		text-decoration: none;
		transition: 0.2s ease;
	}
	ul li a {
		display: block;
	}
	.title {
		margin: 0;
		color: rgb(var(--black));
		line-height: 1;
	}
	.date {
		margin: 0;
		color: rgb(var(--gray));
	}
	ul li a:hover h4,
	ul li a:hover .date {
		color: rgb(var(--accent));
	}
	ul a:hover img {
		box-shadow: var(--box-shadow);
	}
	.links {
		margin-top: 0.5rem;
		display: flex;
		gap: 1rem;
	}
	.links a {
		color: rgb(var(--accent));
		text-decoration: underline;
	}
	@media (max-width: 720px) {
		ul {
			gap: 0.5em;
		}
		ul li {
			width: 100%;
			text-align: center;
		}
		ul li:first-child {
			margin-bottom: 0;
		}
		ul li:first-child .title {
			font-size: 1.563em;
		}
	}
</style>